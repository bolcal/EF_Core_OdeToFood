@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.Restaurant.Name</h1>
<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Address
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>
<a asp-page="./List" class="fa fa-backward">All Restaurants</a>
<hr />
@if(Model.Message !=null)
{
    <div class="alert alert-info">@Model.Message</div>
}
